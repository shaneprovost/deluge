{
  "Sid": "DynamoDBData",
  "Effect": "Allow",
  "Action": [
    "dynamodb:PutItem",
    "dynamodb:GetItem",
    "dynamodb:UpdateItem",
    "dynamodb:DeleteItem",
    "dynamodb:Query",
    "dynamodb:Scan",
    "dynamodb:BatchGetItem",
    "dynamodb:BatchWriteItem",
    "dynamodb:ConditionCheckItem"
  ],
  "Resource": [
    "arn:aws:dynamodb:*:*:table/deluge-*",
    "arn:aws:dynamodb:*:*:table/deluge-*/index/*"
  ]
}
